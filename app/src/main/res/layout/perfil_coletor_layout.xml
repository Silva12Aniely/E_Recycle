<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Perfil_Coletor_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/mVoltar"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#00FFFFFF"
            android:drawableStart="@drawable/ic_arrow_menu"
            android:drawableLeft="@drawable/ic_arrow_menu" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_account_coletor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nome do Coletor"
            android:textColor="#fff"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="20dp"
            android:text="Endereço"
            android:textColor="#fff"
            android:textSize="28sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/telefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="20dp"
                android:text="(11) 0000-0000"
                android:textColor="#fff"
                android:textSize="28sp" />

            <Button
                android:id="@+id/idWpp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="19dp"
                android:layout_toEndOf="@id/telefone"
                android:layout_toRightOf="@id/telefone"
                android:background="@drawable/wpp_logo" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="20dp"
            android:text="E-mail@erecycle.com.br"
            android:textColor="#fff"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:background="@drawable/background_cadastro"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Avaliação:"
                android:layout_marginTop="18dp"
                android:textAlignment="center"
                android:textColor="#009D37"/>

            <RatingBar
                android:id="@+id/ratingPcoletor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stepSize="1"
                android:layout_marginTop="12dp"
                android:progressBackgroundTint="#6D2F6F0E"/>

            <Button
                android:id="@+id/btnRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_entrar"
                android:text="Enviar"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_marginBottom="6dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>