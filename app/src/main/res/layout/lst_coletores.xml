<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:elevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#fff"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imgColetor"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_coletores"/>

        <TextView
            android:id="@+id/lblNomeColetor"
            android:layout_toRightOf="@id/imgColetor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Coletor"
            android:textSize="25sp"/>

        <RatingBar
            android:id="@+id/idRatingColetor"
            android:layout_below="@id/lblNomeColetor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:layout_toRightOf="@id/imgColetor"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:progressBackgroundTint="#00761C"
            android:saveEnabled="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgColetor"
            android:text="0.0Km"
            android:gravity="end"
            android:textSize="22sp"
            android:layout_below="@id/idRatingColetor"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>